<h2><%= t 'common.sign_in' %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email, t('email') %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :password, t('password') %><br />
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, t('common.remember_me') %></p>
  <% end -%>

  <p><%= f.submit t('common.sign_in') %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>