<!DOCTYPE html>
<html>
<head>
  <title>xpend.net</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <%= render :partial => 'shared/top_nav' %>

  <div class="content">
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <div class="outer_block">
      <%= yield %>
    </div>
  </div>

</body>
</html>
